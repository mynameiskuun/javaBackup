package project_1124;

public class Car3 {
	int gas;

	void setGas(int gas) {
		this.gas = gas;
	}

	boolean isLeftGas() {
		if (gas == 0) {
			System.out.println("gas가 없습니다");
			return false; // false를 리턴
		}
		System.out.println("gas가 있습니다");
		return true; // true를 리턴
	}

	public static void main(String[] args) {

		Car3 c1 = new Car3();
		c1.setGas(20);
		
		boolean b = c1.isLeftGas();
		System.out.println(b);

		while (b) {
			if (b = !false) {
				System.out.println("주행을 시작합니다.");
				c1.gas = c1.gas - 1;
			} else {
				System.out.println("연료가 모두 떨어졌습니다.");
				System.out.println("주행을 종료합니다");
			}
		}
//		if(b) {
//			for(int )
//		}
		// 처음에 연료를 주입하고 달리는 자동차 만들어보기
	}
}
